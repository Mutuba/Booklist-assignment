{
  "compilerOptions": {
    "types": ["node", "jest", "@types/jest", "@testing-library/jest-dom"],

    "target": "ES2019",
    "module": "commonjs",
    "jsx": "react",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist"
  },
  "include": ["src/**/*", "jest.setup.js", "useCoverPhotoURL.tsx"],
  "exclude": ["node_modules"]
}
